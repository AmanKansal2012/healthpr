<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".typeapp"
    android:background="@drawable/gradall">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOOK YOUR APPOINTMENTS"
        android:textAlignment="center"
        android:textColor="#111111"
        android:textSize="36dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/donateblood"
        android:layout_width="150dp"
        android:layout_height="150dp"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="150dp"
        android:background="@drawable/gen"
        android:onClick="general" />

    <ImageView
        android:id="@+id/needblood"
        android:layout_width="150dp"

        android:layout_height="150dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="370dp"
        android:background="@drawable/emer"
        android:onClick="emergency" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENERAL APPOINTMENT"

        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="300dp"
        android:textColor="@android:color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMERGENCY APPOINTMENT"

        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_marginTop="520dp"
        android:textColor="@android:color/black"/>


</RelativeLayout>




